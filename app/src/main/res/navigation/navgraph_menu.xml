<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph_menu"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.smoketest.fragments.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.smoketest.fragments.menu.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/friendSearchFragment"
        android:name="com.example.smoketest.fragments.menu.FriendSearchFragment"
        android:label="fragment_friend_search"
        tools:layout="@layout/fragment_friend_search" />
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.example.smoketest.fragments.menu.FriendsFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_friends" />
    <fragment
        android:id="@+id/roomSearchFragment"
        android:name="com.example.smoketest.fragments.menu.RoomSearchFragment"
        android:label="fragment_room_search"
        tools:layout="@layout/fragment_room_search" />
    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.example.smoketest.fragments.menu.GroupsFragment"
        android:label="fragment_groups"
        tools:layout="@layout/fragment_groups" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.smoketest.activities.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>